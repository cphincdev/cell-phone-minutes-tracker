						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
					<EditText android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:inputType="phone"
						android:id="@+id/FifthNum"></EditText>

				</TableRow>
				<TableRow android:layout_height="fill_parent" android:id="@+id/tableRow1"
					android:layout_width="wrap_content">
					<TextView android:text="Number 6" android:id="@+id/textView3"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
					<EditText android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:inputType="phone"
						android:id="@+id/SixthNum"></EditText>

				</TableRow>
				<TableRow android:layout_height="fill_parent" android:id="@+id/tableRow1"
					android:layout_width="wrap_content">
					<TextView android:text="Number 7" android:id="@+id/textView3"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
					<EditText android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:inputType="phone"
						android:id="@+id/SeventhNum"></EditText>

				</TableRow>
				<TableRow android:layout_height="fill_parent" android:id="@+id/tableRow1"
					android:layout_width="wrap_content">
					<TextView android:text="Number 8" android:id="@+id/textView3"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
					<EditText android:layout_width="wrap_content"
