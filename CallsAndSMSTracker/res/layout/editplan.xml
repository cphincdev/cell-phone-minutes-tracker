				</TableRow>
				<TableRow android:layout_height="fill_parent" android:id="@+id/tableRow1"
					android:layout_width="wrap_content">
					<TextView android:text="Number 9" android:id="@+id/textView3"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
					<EditText android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:inputType="phone"
						android:id="@+id/NinethNum"></EditText>

				</TableRow>
				<TableRow android:layout_height="fill_parent" android:id="@+id/tableRow1"
					android:layout_width="wrap_content">
					<TextView android:text="Number 10" android:id="@+id/textView3"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
					<EditText android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:inputType="phone"
						android:id="@+id/TenthNum"></EditText>

				</TableRow>
			</TableLayout>
		</LinearLayout>
	</ScrollView>
	<TableLayout android:layout_width="fill_parent"
		android:gravity="right" android:layout_height="wrap_content"
		android:id="@+id/tableLayout1" android:layout_weight="0.04"
		android:stretchColumns="2,2">
		<TableRow android:layout_height="fill_parent" android:id="@+id/tableRow1"
			android:layout_width="wrap_content">
			<Button android:id="@+id/Done" android:layout_width="wrap_content"
				android:text="Update" android:layout_height="wrap_content"
				android:onClick="btnUpdate"></Button>
			<Button android:id="@+id/Cancel" android:layout_width="wrap_content"
				android:text="Cancel" android:layout_height="wrap_content"
				android:onClick="btnCancel"></Button>
		</TableRow>
