<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="cs422.callstracker"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
    
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" /> <!-- VERY VERY VERY IMPORTANT -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    
      <service
        android:enabled="true"
        android:name=".Telephony_Service_testing"
        android:icon="@drawable/icon"
        android:label="CallsTrackerService"
        android:process=":service_telephone_tracer"
        >
	</service>
    
    

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".CallsTrackerActivity"
                  android:label="Calls Summary">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Splash"
                  android:label="Calls and SMS Tracker">
        </activity>
        <activity android:name=".EditPlan"
                  android:label="Edit Plan">
        </activity>
		<activity android:name=".ResetPlan"
                  android:label="Reset Plan">
        </activity>
        
        <receiver android:name="PhoneCall_Handler">
            <intent-filter>
                <action android:name="android.action.PHONE_STATE" />
                <action android:name="android.intent.action.CALL_BUTTON"/>
                <data android:host="tel"/>
            </intent-filter>
        </receiver>
        
        <receiver android:name="OutgoingCall_Handler">
            <intent-filter>
                <action android:name="android.action.PHONE_STATE" />
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
            </intent-filter>
        </receiver>
        
        <receiver android:name="SMS_Receiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVE"/>
				<action android:name="android.provider.Telephony.WAP_PUSH_RECEIVED"/>
                </intent-filter>
        </receiver>
    </application>
</manifest>